<p id="notice"><%= notice %></p>
<% if @folders.empty? %>
  <h5> You have not created any folders yet</h5>
  <%= link_to '<i class="fas fa-plus"></i> New Folder'.html_safe, new_folder_path, class: "btn btn-primary" %>
<% else %>
  <h2 class='mt-5'>Folders</h2>
  <div class="card-columns">
    <% @folders.each do |folder| %>
      <div class="card">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="40%" y="50%" fill="#dee2e6" dy=".3em">No files yet</text></svg>
        <%# <img src="..." class="card-img-top" alt="..."> %>
        <div class="card-body">
          <h5 class="card-title"><%= folder.name %></h5>
          <p class="card-text"><%= folder.description %></p>
          <p class="card-text"><small class="text-muted">0 file(s)</small></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', folder, class: "card-link" %>
          <%= link_to 'Edit', edit_folder_path(folder), class: "card-link" %>
          <%= link_to 'Destroy', folder, class: "card-link", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
